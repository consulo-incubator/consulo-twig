<idea-plugin>
	<id>org.mustbe.consulo.twig</id>
	<name>Twig</name>
	<depends>com.intellij.xml</depends>

	<extensionPoints>
		<extensionPoint name="variableProvider" interface="org.mustbe.consulo.twig.psi.TwigVariableProvider" />
	</extensionPoints>

	<extensions defaultExtensionNs="com.intellij">
		<lang.parserDefinition language="TWIG" implementationClass="org.mustbe.consulo.twig.TwigParserDefinition" />
		<fileTypeFactory implementation="org.mustbe.consulo.twig.TwigFileTypeFactory" />
		<lang.fileViewProviderFactory language="TWIG" implementationClass="org.mustbe.consulo.twig.TwigFileViewProviderFactory"/>
		<completion.contributor language="TWIG" implementationClass="org.mustbe.consulo.twig.completion.TwigCompletionProvider" />
		<lang.syntaxHighlighterFactory key="TWIG" implementationClass="org.mustbe.consulo.twig.highlight.TwigSyntaxHighlighterFactory"/>
		<syntaxHighlighter key="TWIG" implementationClass="org.mustbe.consulo.twig.highlight.TwigSyntaxHighlighter"/>
		<highlightVisitor implementation="org.mustbe.consulo.twig.editor.TwigHighlightVisitorImpl" />
		<lang.braceMatcher language="TWIG" implementationClass="org.mustbe.consulo.twig.TwigPairedBraceMatcher" />
		<lang.foldingBuilder language="TWIG" implementationClass="org.mustbe.consulo.twig.TwigFoldingBuilder" />

		<psi.referenceContributor language="TWIG" implementation="org.mustbe.consulo.twig.psi.references.TwigReferenceContributor" />
		<lang.elementManipulator forClass="org.mustbe.consulo.twig.psi.TwigReferenceExpression" implementationClass="org.mustbe.consulo.twig.psi.references.TwigReferenceElementManipulator" />
	</extensions>
</idea-plugin>